<head>
	<% include partials/head.ejs %>
	<link rel="stylesheet" href="styles/authform.css">
	<link rel="stylesheet" href="styles/booklist.css">
</head>

<body>
	<%- include("partials/navbar.ejs", {user: user}) %>
	<p id="page-title">Profile</p>

	<form action="/update-user" method="POST" id="user-information" class="user-form">
		<div>
			<label>Email</label><br>
			<input type="text" name="email" value="<%= user.email %>" readonly>
		</div>
		
		<div>
			<label>Full Name</label><br>
			<input type="text" name="fullName" value="<%= user.fullName %>">
		</div>
		
		<div>
			<label>City</label><br>
			<input type="text" name="city" value="<%= user.city %>">
		</div>
		
		<div>
			<label>State</label><br>
			<input type="text" name="state" value="<%= user.state %>">
		</div>

		<div>
			<button type="Submit">Update</button>
		</div>
		
	</form>

	<div id="books">
		<% for (var i = 0; i < books.length; i++) { console.log(books[i]); %>
			<div>
				<img src="<%= books[i].imageSource %>"></img>
				<p><%= books[i].title %></p>
			</div>
		<% } %>
	</div>
</body>